{
  "name": "sparkle",
  "description": "TypeScript playground.",
  "scripts": {
    "start": "pnpm -r run --parallel start",
    "build": "pnpm build:types && pnpm -r run --filter=./packages/** build",
    "build:watch": "pnpm -r run --parallel build:watch",
    "build:types": "pnpm -r run --filter=./packages/** build:types",
    "build:types:watch": "pnpm -r run --parallel build:types:watch"
  },
  "keywords": [
    "create-babel-typescript-monorepo"
  ],
  "author": "Marcus R. Brown <contact@marcusrbrown.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.7.5",
  "engines": {
    "node": ">=16.16.0",
    "pnpm": ">=7.5.2"
  },
  "publishConfig": {
    "linkDirectory": true
  },
  "devDependencies": {
    "@andersdjohnson/tsconfig": "1.0.1",
    "@babel/cli": "7.22.15",
    "@babel/core": "7.22.19",
    "@babel/node": "7.22.19",
    "@babel/plugin-transform-runtime": "7.22.15",
    "@babel/preset-env": "7.22.15",
    "@babel/preset-typescript": "7.22.15",
    "markdownlint": "0.31.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "scripts": "workspace:*"
  }
}
