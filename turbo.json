{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "package.json",
        "tsconfig.json",
        "next.config.{js,ts,mjs,cjs}",
        ".storybook/**/*"
      ]
    },
    "build:theme": {
      "dependsOn": ["@sparkle/types#build"],
      "outputs": ["dist/**", "tailwind/**"],
      "inputs": ["src/**/*.{ts,tsx}", "package.json", "tsconfig.json", "tsdown.config.ts"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "outputs": ["dist/**/*.d.ts"],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig.json"]
    },
    "build:types:watch": {
      "dependsOn": ["^build:types"],
      "persistent": true,
      "cache": false
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false,
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "package.json", "tsconfig.json", ".env.*local"]
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.{ts,tsx}", "test/**/*.{ts,tsx}", "package.json", "tsconfig.json", "vitest.config.{ts,js}"]
    },
    "test:theme": {
      "dependsOn": ["build:theme"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "package.json",
        "tsconfig.json",
        "vitest.config.{ts,js}",
        "vite.config.ts"
      ],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build:types"],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig.json"]
    },
    "test:visual": {
      "dependsOn": ["@sparkle/storybook#build"],
      "outputs": ["test-results/**"],
      "inputs": [
        "test/visual-regression/**/*.{ts,js}",
        "test/**/*.{test,spec}.{ts,tsx}",
        "playwright.config.{ts,js}",
        "src/**/*.stories.{ts,tsx}",
        "package.json"
      ],
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": ["dist/**", ".turbo/**", "node_modules/**", "test-results/**"]
    }
  }
}
