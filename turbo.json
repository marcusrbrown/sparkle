{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "STORYBOOK_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "package.json",
        "tsconfig.json",
        "next.config.{js,ts,mjs,cjs}",
        ".storybook/**/*"
      ],
      "env": ["NODE_ENV"]
    },
    "build:types": {
      "dependsOn": [],
      "outputs": ["dist/**/*.d.ts"],
      "inputs": ["src/**/*.ts", "package.json", "tsconfig.json"],
      "cache": true
    },
    "build:utils": {
      "dependsOn": ["@sparkle/types#build:types"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.{ts,tsx}", "package.json", "tsconfig.json", "tsdown.config.ts"],
      "cache": true
    },
    "build:error-testing": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "package.json", "tsconfig.json", "tsdown.config.ts"],
      "cache": true
    },
    "build:theme": {
      "dependsOn": ["@sparkle/types#build:types", "@sparkle/utils#build:utils"],
      "outputs": ["dist/**", "tailwind/**"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "src/tokens/**/*",
        "src/themes/**/*",
        "package.json",
        "tsconfig.json",
        "tsdown.config.ts",
        "vite.config.ts"
      ],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "build:config": {
      "dependsOn": ["@sparkle/theme#build:theme"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "package.json", "tsconfig.json", "tsdown.config.ts"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "build:ui": {
      "dependsOn": ["@sparkle/config#build:config"],
      "outputs": ["dist/**", "coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "src/**/*.css",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "vite.config.ts",
        "tailwind.config.ts"
      ],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "build:storybook": {
      "dependsOn": ["@sparkle/ui#build:ui", "@sparkle/theme#build:theme"],
      "outputs": ["storybook-static/**", "test-results/**"],
      "inputs": [
        "src/**/*",
        ".storybook/**/*",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "tailwind.config.ts"
      ],
      "env": ["NODE_ENV", "STORYBOOK_ENV"],
      "cache": true
    },
    "build:types:watch": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV"],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig.json", "tsconfig.build.json", "package.json"],
      "outputs": ["**/*.tsbuildinfo"]
    },
    "build:watch": {
      "dependsOn": ["^build:types", "^build:utils", "^build:theme", "^build:config", "^build:ui"],
      "persistent": true,
      "cache": false,
      "inputs": ["src/**/*.{ts,tsx}", "package.json", "tsconfig.json", "tsdown.config.ts", "vite.config.ts"]
    },
    "dev": {
      "dependsOn": ["^build:types", "^build:utils", "^build:theme", "^build:config", "^build:ui"],
      "persistent": true,
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "package.json",
        "tsconfig.json",
        ".env.*local",
        "vite.config.ts",
        "next.config.{js,ts,mjs,cjs}"
      ],
      "env": ["NODE_ENV", "STORYBOOK_ENV"]
    },
    "start": {
      "dependsOn": ["^build:types", "^build:utils", "^build:theme", "^build:config", "^build:ui"],
      "persistent": true,
      "cache": false,
      "inputs": ["package.json", "next.config.{js,ts,mjs,cjs}", ".env.*local"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["^build:types", "^build:utils", "^build:theme", "^build:config", "^build:ui"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "package.json",
        "tsconfig.json",
        "vitest.config.{ts,js}",
        "vite.config.ts"
      ],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "test:theme": {
      "dependsOn": ["@sparkle/theme#build:theme"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "package.json",
        "tsconfig.json",
        "vitest.config.{ts,js}",
        "vite.config.ts"
      ],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["^build:types", "^build:utils", "^build:theme", "^build:config", "^build:ui"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "package.json",
        "tsconfig.json",
        "vitest.config.{ts,js}",
        "vite.config.ts"
      ],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build:types"],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig.json", "package.json"],
      "cache": true
    },
    "test:visual": {
      "dependsOn": ["@sparkle/storybook#build:storybook"],
      "outputs": ["test-results/**"],
      "inputs": [
        "test/visual-regression/**/*.{ts,js}",
        "test/**/*.{test,spec}.{ts,tsx}",
        "playwright.config.{ts,js}",
        "src/**/*.stories.{ts,tsx}",
        "package.json"
      ],
      "cache": false
    },
    "test:watch": {
      "dependsOn": ["^build:types", "^build:utils", "^build:theme", "^build:config", "^build:ui"],
      "persistent": true,
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "package.json",
        "tsconfig.json",
        "vitest.config.{ts,js}",
        "vite.config.ts"
      ],
      "env": ["NODE_ENV"]
    },
    "clean": {
      "cache": false,
      "outputs": [
        "dist/**",
        ".turbo/**",
        "node_modules/**",
        "test-results/**",
        "coverage/**",
        "storybook-static/**",
        "tailwind/**"
      ]
    }
  }
}
