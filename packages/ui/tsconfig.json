{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals", "node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../theme"
    },
    {
      "path": "../config"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
