{
  "name": "@sparkle/theme",
  "version": "0.0.0",
  "description": "Comprehensive theme management for Sparkle Design System with cross-platform design tokens, React Context-based theme providers, and seamless Tailwind CSS integration",
  "keywords": [
    "theme",
    "design-system",
    "design-tokens",
    "react",
    "react-native",
    "tailwind",
    "tailwindcss",
    "typescript",
    "cross-platform",
    "sparkle"
  ],
  "homepage": "https://github.com/marcusrbrown/sparkle/tree/main/packages/theme",
  "bugs": {
    "url": "https://github.com/marcusrbrown/sparkle/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusrbrown/sparkle.git",
    "directory": "packages/theme"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <git@mrbro.dev>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind/index.d.ts",
      "import": "./dist/tailwind/index.js",
      "require": "./dist/tailwind/index.cjs",
      "default": "./dist/tailwind/index.js"
    },
    "./react-native": {
      "types": "./dist/react-native/index.d.ts",
      "import": "./dist/react-native/index.js",
      "require": "./dist/react-native/index.cjs",
      "default": "./dist/react-native/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "build:analyze": "npm run build && npx size-limit",
    "build:theme": "npm run build",
    "clean": "rm -rf dist .turbo",
    "lint": "eslint",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:theme": "npm run test",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sparkle/types": "workspace:*",
    "@sparkle/utils": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "~19.2.0",
    "happy-dom": "20.6.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwindcss": "^4.0.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
