{
  "name": "@sparkle/storybook",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "storybook build",
    "clean": "rimraf .turbo node_modules dist storybook-static test-results",
    "dev": "storybook dev -p 6006",
    "lint": "eslint",
    "preview": "serve storybook-static",
    "test:install": "playwright install",
    "test:visual": "playwright test --config playwright.config.ts",
    "test:visual:debug": "playwright test --config playwright.config.ts --debug",
    "test:visual:headed": "playwright test --config playwright.config.ts --headed",
    "test:visual:ui": "playwright test --config playwright.config.ts --ui",
    "test:visual:update": "playwright test --config playwright.config.ts --update-snapshots"
  },
  "dependencies": {
    "@sparkle/config": "workspace:*",
    "@sparkle/theme": "workspace:*",
    "@sparkle/ui": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "^4.0.6"
  },
  "devDependencies": {
    "@playwright/test": "1.55.1",
    "@storybook/addon-a11y": "9.1.8",
    "@storybook/addon-docs": "^9.0.0",
    "@storybook/addon-links": "^9.0.0",
    "@storybook/addon-onboarding": "^9.0.0",
    "@storybook/addon-viewport": "9.0.8",
    "@storybook/react-vite": "^9.0.0",
    "@storybook/test-runner": "0.23.0",
    "@tailwindcss/vite": "^4.0.6",
    "@types/react": "~19.1.0",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "playwright": "1.55.1",
    "postcss": "^8.5.2",
    "rimraf": "^6.0.0",
    "serve": "^14.2.1",
    "storybook": "^9.0.0",
    "typescript": "5.9.2",
    "vite": "7.1.7"
  }
}
