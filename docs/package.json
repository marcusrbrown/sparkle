{
  "name": "@sparkle/docs",
  "version": "0.1.0",
  "description": "Comprehensive Astro Starlight documentation site for Sparkle Design System with automated component documentation and interactive playground",
  "keywords": [
    "astro",
    "starlight",
    "documentation",
    "design-system",
    "components",
    "sparkle"
  ],
  "homepage": "https://sparkle.mrbro.dev",
  "bugs": {
    "url": "https://github.com/marcusrbrown/sparkle/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusrbrown/sparkle.git",
    "directory": "docs"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <git@mrbro.dev>",
  "type": "module",
  "scripts": {
    "a11y:audit": "tsx scripts/accessibility-audit.ts",
    "a11y:audit:ci": "tsx scripts/accessibility-audit.ts --ci",
    "a11y:cli": "axe-core-cli http://localhost:4321 --reporter json --output-dir accessibility-reports",
    "a11y:playwright": "playwright test --config accessibility.config.ts",
    "astro": "astro",
    "build": "npm run docs:automation && astro build",
    "build:force": "npm run docs:automation:force && astro build",
    "build:perf": "tsx scripts/build-performance.ts",
    "dev": "astro dev",
    "docs:api": "typedoc --options typedoc.json",
    "docs:api:watch": "typedoc --options typedoc.json --watch",
    "docs:automation": "tsx scripts/automation.ts",
    "docs:automation:dev": "tsx scripts/automation.ts --dev",
    "docs:automation:force": "tsx scripts/automation.ts --force",
    "docs:extract": "tsx scripts/extract-jsdoc.ts",
    "docs:format": "eslint --fix",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "docs:markdown": "tsx scripts/generate-markdown.ts",
    "docs:watch": "tsx scripts/watch-docs.ts",
    "docs:watch:verbose": "tsx scripts/watch-docs.ts --verbose",
    "lint": "eslint",
    "preview": "astro preview",
    "sr:test": "tsx scripts/screen-reader-testing.ts",
    "start": "astro dev",
    "theme:generate": "tsx scripts/generate-theme-css.ts >| src/styles/sparkle-theme.css"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "4.3.7",
    "@astrojs/react": "4.4.0",
    "@astrojs/starlight": "^0.35.2",
    "@monaco-editor/react": "4.7.0",
    "@sparkle/theme": "workspace:*",
    "@sparkle/types": "workspace:*",
    "@sparkle/ui": "workspace:*",
    "@sparkle/utils": "workspace:*",
    "astro": "^5.6.1",
    "consola": "3.4.2",
    "monaco-editor": "0.52.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sharp": "^0.34.2",
    "shiki": "3.13.0"
  },
  "devDependencies": {
    "@axe-core/cli": "4.11.0",
    "@axe-core/playwright": "4.11.0",
    "@microsoft/api-extractor": "7.53.1",
    "@types/node": "22.18.10",
    "@types/react": "~19.2.0",
    "@types/react-dom": "19.2.2",
    "axe-core": "4.11.0",
    "chokidar": "4.0.3",
    "doctrine": "3.0.0",
    "playwright": "1.56.1",
    "ts-morph": "26.0.0",
    "tsx": "4.20.6",
    "typedoc": "0.28.13",
    "typedoc-plugin-frontmatter": "1.3.0",
    "typedoc-plugin-markdown": "4.9.0",
    "typescript": "5.9.3"
  }
}
