{
  "extends": ["astro/tsconfigs/strict", "../tsconfig.json"],
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ES2022",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/content/*": ["./src/content/*"],
      "@/styles/*": ["./src/styles/*"]
    },
    "types": ["astro/client", "node", "@types/react", "@types/react-dom"],
    "outDir": "dist"
  },
  "references": [
    {
      "path": "../packages/types"
    },
    {
      "path": "../packages/utils"
    },
    {
      "path": "../packages/theme"
    },
    {
      "path": "../packages/ui"
    }
  ],
  "include": [".astro/types.d.ts", "src/**/*", "astro.config.mjs"],
  "exclude": ["node_modules", "dist", ".astro"]
}
